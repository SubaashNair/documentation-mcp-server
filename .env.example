# Server Configuration
PORT=3000
NODE_ENV=development

# Documentation Update Schedule (cron format)
# Default: '0 0 * * *' (every day at midnight)
DOCUMENTATION_UPDATE_SCHEDULE=0 0 * * *

# API Security
API_KEY=your_secure_api_key_here

# GitHub API (for fetching documentation from repositories)
GITHUB_TOKEN=your_github_token_here

# Libraries to Include (comma-separated)
LIBRARIES=react,vue,angular

# Logging
LOG_LEVEL=info

# Search Settings
SEARCH_RESULT_LIMIT=20
